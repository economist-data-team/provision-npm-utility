{
  "name": "@economist/provision-npm-utility",
  "version": "0.0.0-development",
  "description": "Rapidly provision utilies for Economist Data Team interactives",
  "homepage": "http://economist-components.github.io/provision-npm-utility",
  "bugs": "http://github.com/economist-components/provision-npm-utility/issues",
  "license": "MIT",
  "author": "The Economist Editorial (https://economist.com)",
  "files": [
    "assets/*",
    "lib/*.js",
    "package-versions.json"
  ],
  "main": "lib/index.js",
  "bin": {
    "provision-npm-utility": "lib/index.js"
  },
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/economist-components/provision-npm-utility"
  },
  "scripts": {
    "access": "npm-run-all --parallel access:*",
    "access:public": "npm access public $npm_package_name",
    "access:sudo": "npm access grant read-write economist:read-write-all $npm_package_name",
    "build": "npm i && npm t && npm run pages && npm run semantic-release",
    "lint": "eslint $npm_package_directories_src",
    "pages": "echo stub for build.sh",
    "prepublish": "babel $npm_package_directories_src -d $npm_package_directories_lib",
    "postpublish": "npm run access",
    "semantic-release": "semantic-release pre || exit 0; npm publish && semantic-release post",
    "test": "npm run lint",
    "watch": "npm run prepublish -- -w"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "babel": {
    "compact": false,
    "ignore": "node_modules",
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015-loose",
      "stage-2"
    ],
    "retainLines": true,
    "sourceMaps": "inline"
  },
  "eslintConfig": {
    "extends": [
      "strict"
    ],
    "parser": "babel-eslint",
    "rules": {
      "spaced-comment": 0
    }
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "lodash.camelcase": "^4.1.0",
    "lodash.capitalize": "^4.1.1",
    "lodash.compose": "^2.4.1",
    "lodash.defaultsdeep": "^4.3.3",
    "lodash.get": "^4.1.2",
    "lodash.kebabcase": "^4.0.0",
    "lodash.uniq": "^4.2.0",
    "lodash.without": "^4.1.2",
    "packagesmith": "^1.1.2",
    "packagesmith.formats.json": "^1.0.1",
    "packagesmith.formats.multiline": "^1.0.1",
    "packagesmith.formats.yaml": "^1.0.0",
    "packagesmith.questions.description": "^1.0.1",
    "packagesmith.questions.name": "^1.0.1",
    "parse-packagejson-name": "^1.0.0",
    "provision-editorconfig": "^1.0.1",
    "provision-eslint": "^2.0.1",
    "provision-git": "^1.1.0",
    "provision-gitignore": "^1.0.2",
    "provision-npm-babel": "^1.1.4",
    "provision-npm-semantic-release": "^2.0.2",
    "provision-stylelint": "^3.0.0",
    "sort-package-json": "^1.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.1",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": "^2.5.3",
    "eslint-config-strict": "^8.5.1",
    "eslint-plugin-filenames": "^0.2.0",
    "ghooks": "^1.1.1",
    "npm-run-all": "^1.7.0",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.5.0"
  }
}
